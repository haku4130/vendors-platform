{
  "title": "System Overview",
  "uid": "system-overview",
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage",
      "type": "graph",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{job=\"node\",mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ],
      "yaxes": [
        { "format": "percent", "label": "Usage", "min": 0, "max": 100 },
        { "format": "short" }
      ]
    },
    {
      "id": 2,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{job=\"node\"} / node_memory_MemTotal_bytes{job=\"node\"}))",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ],
      "yaxes": [
        { "format": "percent", "label": "Usage", "min": 0, "max": 100 },
        { "format": "short" }
      ]
    },
    {
      "id": 3,
      "title": "Disk Usage",
      "type": "graph",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{job=\"node\",mountpoint=\"/\",fstype!=\"rootfs\"} * 100) / node_filesystem_size_bytes{job=\"node\",mountpoint=\"/\",fstype!=\"rootfs\"})",
          "legendFormat": "Disk Usage",
          "refId": "A"
        }
      ],
      "yaxes": [
        { "format": "percent", "label": "Usage", "min": 0, "max": 100 },
        { "format": "short" }
      ]
    },
    {
      "id": 4,
      "title": "Network Traffic",
      "type": "graph",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{job=\"node\"}[5m])",
          "legendFormat": "{{device}} receive",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{job=\"node\"}[5m])",
          "legendFormat": "{{device}} transmit",
          "refId": "B"
        }
      ],
      "yaxes": [
        { "format": "Bps", "label": "Bytes/sec" },
        { "format": "short" }
      ]
    }
  ]
}
