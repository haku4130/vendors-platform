{
  "title": "PostgreSQL Overview",
  "uid": "postgres-overview",
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Database Connections",
      "type": "graph",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{job=\"postgres\"}",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        { "format": "short", "label": "Connections" },
        { "format": "short" }
      ]
    },
    {
      "id": 2,
      "title": "Transaction Rate",
      "type": "graph",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{job=\"postgres\"}[5m])",
          "legendFormat": "{{datname}} commits",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{job=\"postgres\"}[5m])",
          "legendFormat": "{{datname}} rollbacks",
          "refId": "B"
        }
      ],
      "yaxes": [
        { "format": "tps", "label": "Transactions/sec" },
        { "format": "short" }
      ]
    },
    {
      "id": 3,
      "title": "Database Size",
      "type": "graph",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "pg_database_size_bytes{job=\"postgres\"}",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "bytes", "label": "Size" }, { "format": "short" }]
    },
    {
      "id": 4,
      "title": "Cache Hit Ratio",
      "type": "graph",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_blks_hit{job=\"postgres\"}[5m]) / (rate(pg_stat_database_blks_hit{job=\"postgres\"}[5m]) + rate(pg_stat_database_blks_read{job=\"postgres\"}[5m]))",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        { "format": "percentunit", "label": "Hit Ratio", "min": 0, "max": 1 },
        { "format": "short" }
      ]
    }
  ]
}
